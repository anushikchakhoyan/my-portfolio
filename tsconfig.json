{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2017"
    ],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/ui/*": [
        "src/components/ui/*"
      ],
      "@/base/*": [
        "src/components/base/index"
      ],
      "@/features/*": [
        "src/features/*"
      ],
      "@/images/*": [
        "src/images/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/locales/*": [
        "src/locales/en/*"
      ],
      "@/contexts/*": [
        "src/contexts/*"
      ],
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}